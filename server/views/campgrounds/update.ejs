<% include ../partials/header%>
<div class="container" style="margin-top : 5%;">
    <div class="row">
        <div class="col-md-8">

            <h1 class="mb-5">Update
                <%=camp.name%>
            </h1>
            <form action="/campgrounds/<%=camp._id%>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" name="obj[name]" class="form-control" placeholder="Campground Name" required
                        value="<%=camp.name%>">
                </div>
                <div class="form-group">
                    <input type="text" name="obj[url]" class="form-control" value="<%=camp.url%>" placeholder="Image URL"
                        required>
                </div>
                <div class="form-group">
                    <textarea type="text" placeholder="Add a description" id="exampleFormControlTextarea1" , name="obj[description]"
                        , class="form-control input-large"><%=camp.description%></textarea>
                </div>
                <button type="submit" class="btn btn-primary ">Update</button>
                <a href="/campgrounds" class="btn btn-dark">Go Back</a>
            </form>
        </div>
        <div class="col-lg-4 mt-3">
            <!--  <img src="https://images.unsplash.com/photo-1529385101576-4e03aae38ffc" alt="Add New Campground" class="w-100"> -->
        </div>
    </div>

</div>
<% include ../partials/footer%>