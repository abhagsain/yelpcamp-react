<% include ../partials/header%>
<div class="container" style="margin-top : 5%;">
    <div class="row">
        <div class="col-md-8">
            <h1>Add Comment to
                <%=camp.name%>
            </h1>
            <form action="/campgrounds/<%=camp._id%>/comments" method="post" class="my-3">
                <div class="form-group">
                    <input type="text" name="comment[author]" class="form-control" value="<%=user.username%>"
                        placeholder="Your name" readonly>
                </div>
                <div class="form-group">
                    <input type="text" name="comment[text]" class="form-control" placeholder="Comment" required>
                </div>
                <button type="submit" class="btn btn-primary ">Submit</button>
                <a href="/campgrounds/<%=camp.id%>" class="btn btn-dark">Go Back</a>
            </form>
        </div>
        <div class="col-lg-4 mt-3">
        </div>
    </div>

</div>
<% include ../partials/footer%>