<% include partials/header%>
<div class="container" style="margin-top : 5%;">
    <div class="row">
        <div class="col-md-8">

            <h1>Submit a campground</h1>
            <form action="/campgrounds" method="post">
                <div class="form-group">
                    <input type="text" name="obj[name]" class="form-control" placeholder="Campground Name" required>
                </div>
                <div class="form-group">
                    <input type="text" name="obj[url]" class="form-control" placeholder="Image URL" required>
                </div>
                <div class="form-group">
                    <textarea type="text" placeholder="Add a description" id="exampleFormControlTextarea1" , name="obj[description]"
                        , class="form-control input-large"></textarea>
                </div>
                <button type="submit" class="btn btn-primary ">Submit</button>
                <a href="/campgrounds" class="btn btn-dark">Go Back</a>
            </form>
        </div>
        <div class="col-lg-4 mt-3">
        </div>
    </div>

</div>
<% include partials/footer%>